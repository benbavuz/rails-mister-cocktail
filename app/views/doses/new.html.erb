<div class="container">
  <div class = "submit-cocktail">

    <h3>New dose for the <%= @cocktail.name %></h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.submit "add Dose", class: "btn btn-primary" %>
        <% end %>
  </div>
</div>
